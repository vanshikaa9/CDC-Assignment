//SOLUTION 1

class Solution {
    public int[] rowAndMaximumOnes(int[][] g) {
        int r = 0, mx = 0;
        for(int i=0;i<g.length;i++){
            int c = 0;
            for(int j=0;j<g[0].length;j++) if(g[i][j]==1) c++;
            if(c>mx){ mx=c; r=i; }
        }
        return new int[]{r,mx};
    }
}
