//SOLUTION 1

class Solution {
    public int countSubstrings(String s) {
        int n = s.length(), c = 0;
        for (int i = 0; i < n; i++) {
            for (int l = i, r = i; l >= 0 && r < n && s.charAt(l) == s.charAt(r); l--, r++) c++;
            for (int l = i, r = i + 1; l >= 0 && r < n && s.charAt(l) == s.charAt(r); l--, r++) c++;
        }
        return c;
    }
}
