//SOLUTION 1

import java.util.*;
class Solution {
    public int longestConsecutive(int[] a) {
        if (a.length == 0) return 0;
        Arrays.sort(a);
        int m = 1, c = 1;
        for (int i = 1; i < a.length; i++) {
            if (a[i] == a[i - 1]) continue;
            if (a[i] == a[i - 1] + 1) c++;
            else c = 1;
            if (c > m) m = c;
        }
        return m;
    }
}
