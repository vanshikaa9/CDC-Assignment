//SOLUTION 1

class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int l = 1, r = 0;
        for (int i = 0; i < piles.length; i++) 
            r = Math.max(r, piles[i]);
        while (l < r) {
            int m = (l + r) / 2, t = 0;
            for (int i = 0; i < piles.length; i++) 
                t += (piles[i] + m - 1) / m;
            if (t > h) l = m + 1;
            else r = m;
        }
        return l;
    }
}
