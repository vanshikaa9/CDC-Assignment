//SOLUTION 1


class Solution {
    public boolean isPalindrome(String s) 
    {
        String x="";
        for(int i=0;i<s.length();i++)
        {
            char c=s.charAt(i);
            if(Character.isLetterOrDigit(c))
             x+=Character.toLowerCase(c);
        }
        String rev="";
        for(int i=x.length()-1;i>=0;i--) 
        rev+=x.charAt(i);
        
        return x.equals(rev);
    }
}
